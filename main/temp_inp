# include<stdio.h>

int square(int s);
int rect(int, int);
float circle(float r);
int triangle(int, int);
int parallelogram(int, int);
float ellipse(int a, int b);

int main()
{
	printf("---Area of shapes---\n");
	printf("1. Square\n2. Rectange\n3.Circle\n4.Triangle\n5.Parallelogram\n6.Ellipse\n");
	printf("Enter number: ");
	int choice;

	scanf("%d", &choice);
	if(choice == 1)
	{
		int s;
		printf("Side: ");
		scanf("%d", &s);
		int area = square(s);
		printf("Area of square: %d\n", area);
	}
	else if(choice == 2)
	{
		int l, b;
		printf("Length: ");
		scanf("%d", &l);
		printf("Breadth: ");
		scanf("%d", &b);
		if(b>l)
		{	printf("Length must be greater\n");	}
		int area = rect(l, b);
		printf("Area of rectange: %d\n", area);
	}
	else if(choice == 3)
	{
		float r;
		printf("Radius: ");
		scanf("%f", &r);
		float area = circle(r);
		printf("Area of cirle: %f\n", area);
	}
	else if(choice == 4)
	{
		int b, h;
		printf("Base: ");
		scanf("%d", &b);
		printf("Height: ");
		scanf("%d", &h);
		int area = triangle(b, h);
		printf("Area of triangle: %d\n", area);
	}
	else if(choice == 5)
	{
		int b, h;
		printf("Base: ");
		scanf("%d", &b);
		printf("Vertical height: ");
		scanf("%d", &h);
		int area = parallelogram(b, h);
		printf("Area of parallelogram: %d\n", area);
	}
	else if(choice == 6)
	{
		float a, b;
		printf("Minor axis: ");
		scanf("%f", &a);
		printf("Major axis: ");
		scanf("%f", &b);
		float area = ellipse(a, b);
		printf("Area of ellipse: %f\n", area);
	}
	else
		printf("Invalid choice\n");
	return 0;
}

int square(int s)
{
	int ret = rect(s, s);
	return ret;
}


int rect(int l, int b)
{
	return l*b;
}

float circle(float r)
{
	return 3.14 * r * r;
}

int triangle(int b, int h)
{
    int ret1 = rect(b, h);
	int ret = 0.5 * ret1;
	return ret;
}

int parallelogram(int b, int h)
{
	return rect(b, h);
}

float ellipse(int a, int b)
{
	float ret = 0.5 * 0.5 * 3.14 * a * b;
	return ret;
}
