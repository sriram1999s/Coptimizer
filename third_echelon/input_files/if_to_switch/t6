int main()
{
    int a, b;
    if(!(a==0))
    {    int b; }
    else if(a==1)
    {    int c; }
    else if(a==2)
    {    int c1;    }
    else
    {    int d; }

    if(a!=0 || b==0)
    {    int b; }
    else if(1==b && b!=0)
    {    int c; }
    else if(b==2)
     {   int c1;    }

    if(b==0 && a!=0)
    {    int b; }
    else if(1==b && b!=0)
    {    int c; }
    else if(b==2)
    {    int c1;    }
}